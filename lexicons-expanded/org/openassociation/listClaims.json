{
  "lexicon": 1,
  "id": "org.openassociation.listClaims",
  "defs": {
    "main": {
      "type": "query",
      "description": "List claims. Filterable by: action, provider, receiver, triggeredBy, finished.",
      "parameters": {
        "type": "params",
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "Fetch a single record by AT-URI. Other filters are ignored when set."
          },
          "action": {
            "type": "string",
            "description": "Filter by action value."
          },
          "provider": {
            "type": "string",
            "description": "Filter by provider (DID of referenced agent).",
            "format": "did"
          },
          "receiver": {
            "type": "string",
            "description": "Filter by receiver (DID of referenced agent).",
            "format": "did"
          },
          "triggeredBy": {
            "type": "string",
            "description": "Filter by triggeredBy (AT-URI of referenced record).",
            "format": "at-uri"
          },
          "finished": {
            "type": "boolean",
            "description": "Filter by finished."
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of records to return."
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor from a previous response."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "records"
          ],
          "properties": {
            "records": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#recordItem"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Pagination cursor for next page."
            }
          }
        }
      }
    },
    "recordItem": {
      "type": "object",
      "required": [
        "uri"
      ],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri",
          "description": "AT-URI of the record."
        },
        "value": {
          "type": "ref",
          "ref": "org.openassociation.claim",
          "description": "The full record value."
        }
      }
    }
  }
}
