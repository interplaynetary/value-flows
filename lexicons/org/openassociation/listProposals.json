{
  "lexicon": 1,
  "id": "org.openassociation.listProposals",
  "defs": {
    "main": {
      "type": "query",
      "description": "List proposals. Filterable by: unitBased, purpose, publishes, reciprocal, proposedTo, listedIn.",
      "parameters": {
        "type": "params",
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "Fetch a single record by AT-URI. Other filters are ignored when set."
          },
          "unitBased": {
            "type": "boolean",
            "description": "Filter by unitBased."
          },
          "purpose": {
            "type": "string",
            "description": "Filter by purpose value."
          },
          "publishes": {
            "type": "string",
            "description": "Filter where publishes array contains this AT-URI.",
            "format": "at-uri"
          },
          "reciprocal": {
            "type": "string",
            "description": "Filter where reciprocal array contains this AT-URI.",
            "format": "at-uri"
          },
          "proposedTo": {
            "type": "string",
            "description": "Filter where proposedTo array contains this DID.",
            "format": "did"
          },
          "listedIn": {
            "type": "string",
            "description": "Filter where listedIn array contains this AT-URI.",
            "format": "at-uri"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of records to return."
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor from a previous response."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "records"
          ],
          "properties": {
            "records": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#recordItem"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Pagination cursor for next page."
            }
          }
        }
      }
    },
    "recordItem": {
      "type": "object",
      "required": [
        "uri"
      ],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri",
          "description": "AT-URI of the record."
        },
        "value": {
          "type": "ref",
          "ref": "org.openassociation.proposal",
          "description": "The full record value."
        }
      }
    }
  }
}
