{
  "lexicon": 1,
  "id": "vf.planning.listClaims",
  "defs": {
    "main": {
      "type": "query",
      "description": "List claims. Filterable by: action, provider, receiver, triggeredBy, finished, resourceConformsTo.",
      "parameters": {
        "type": "params",
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "Fetch a single record by AT-URI. Other filters are ignored when set."
          },
          "action": {
            "type": "string",
            "description": "Filter by action (AT-URI of referenced record).",
            "format": "at-uri"
          },
          "provider": {
            "type": "string",
            "description": "Filter by provider (DID of referenced agent).",
            "format": "did"
          },
          "receiver": {
            "type": "string",
            "description": "Filter by receiver (DID of referenced agent).",
            "format": "did"
          },
          "triggeredBy": {
            "type": "string",
            "description": "Filter by triggeredBy (AT-URI of referenced record).",
            "format": "at-uri"
          },
          "finished": {
            "type": "boolean",
            "description": "Filter by finished."
          },
          "resourceConformsTo": {
            "type": "string",
            "description": "Filter by resourceConformsTo (AT-URI of referenced record).",
            "format": "at-uri"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of records to return."
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor from a previous response."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "records"
          ],
          "properties": {
            "records": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "uri"
                ],
                "properties": {
                  "uri": {
                    "type": "string",
                    "format": "at-uri",
                    "description": "AT-URI of the record."
                  },
                  "value": {
                    "type": "unknown",
                    "description": "The full record value."
                  }
                }
              }
            },
            "cursor": {
              "type": "string",
              "description": "Pagination cursor for next page."
            }
          }
        }
      }
    }
  }
}
